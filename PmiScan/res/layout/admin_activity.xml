<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pmi_blue_bg_1"
    android:orientation="vertical"
    tools:context="pmi.scan.qr.AdminActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_name"
        android:layout_gravity="center|top"
        android:paddingTop="250dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/pmi_logo" />
    
    <EditText
        android:id="@+id/course_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:hint="Course ID"
        android:singleLine="true"
        android:maxLength="20"
        android:layout_gravity="center|top"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textfieldshape"
        android:layout_marginBottom="30dp"
        android:padding="5dp" />
    
	    <TableRow 
	        android:layout_width="match_parent"
	       	android:layout_height="match_parent"
	        android:orientation="vertical">
				    <Button
				        android:id="@+id/scan_button"
				        android:layout_width="200dp"
        				android:layout_height="50dp"
    					android:layout_gravity="left"
				        android:background="@drawable/custom_selector"
				        android:text="@string/scan"
				        android:textColor="#FFFFFF"
				        android:textSize="20sp" 
				        android:textStyle="bold"
				        android:layout_marginLeft="80dp"
				        android:padding="5dp"/>
				    
				     <Button
				        android:id="@+id/update_course_button"
				        android:layout_width="200dp"
        				android:layout_height="50dp"
    					android:layout_gravity="right"
				        android:background="@drawable/custom_selector"
				        android:text="@string/coursebtn"
				        android:textColor="#FFFFFF"
				        android:textSize="20sp" 
				        android:textStyle="bold"
				        android:layout_marginLeft="40dp"
				        android:padding="5dp"/>
	     </TableRow>

</LinearLayout>
